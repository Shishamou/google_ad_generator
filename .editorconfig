[*]
tab_width = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = true

[*.php]
indent_style = space
indent_size = 4

[*.{js,jsx,json}]
indent_style = space
indent_size = 2

[*.html]
indent_style = tab

[*.{css,less}]
indent_style = tab

[*.csv]
insert_final_newline = false
